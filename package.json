{
  "name": "2060-service-agent",
  "private": true,
  "license": "Apache-2.0",
  "description": "Your gateway to 2060 ecosystem",
  "homepage": "https://2060.io",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/2060-io/2060-service-agent"
  },
  "scripts": {
    "prebuild": "yarn workspace @2060.io/model run build",
    "build": "yarn workspaces run build",
    "start": "yarn workspace main run start",
    "check-types": "yarn check-types:build && yarn check-types:tests",
    "check-types:tests": "tsc -p tsconfig.test.json --noEmit",
    "check-types:build": "yarn workspaces run tsc --noEmit -p tsconfig.build.json",
    "prettier": "prettier '**/*.+(js|json|ts|tsx|md|yml|yaml)'",
    "format": "yarn prettier --write",
    "check-format": "yarn prettier --list-different",
    "test": "yarn workspaces run test",
    "lint": "eslint \"{packages,apps,libs}/**/*.ts\" --fix",
    "validate": "yarn lint && yarn check-types && yarn check-format"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.2.5",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^5.6.2"
  },
  "resolutions": {
    "@types/node": "20.11.19"
  }
}